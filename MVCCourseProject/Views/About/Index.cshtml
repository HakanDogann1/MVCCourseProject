@model List<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Detay 1</th>
            <th>Detay 2</th>
            <th>Resim 1</th>
            <th>Resim 2</th>
            <th>Statü</th>
            <th>Aktif</th>
            <th>Pasif</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AboutID</td>
                <td>@item.AboutDetails1</td>
                <td>@item.AboutDetails2</td>
                <td>@item.AboutImage1</td>
                <td>@item.AboutImage2</td>
                <td>
                    @if (item.AboutStatus == true)
                    {
                        <span class="badge badge-success">@item.AboutStatus</span>
                    }
                    @if (item.AboutStatus == false)
                    {
                        <span class="badge badge-danger">@item.AboutStatus</span>

                    }
                </td>
                <td><a href="/About/AktifAbout/@item.AboutID" class="btn btn-outline-success">Aktif Yap</a></td>
                <td><a href="/About/PasifAbout/@item.AboutID" class="btn btn-outline-danger">Pasif Yap</a></td>
            </tr>
        }


    </tbody>
    
</table>
<br />
<button class="btn btn-outline-primary" data-toggle="modal" data-target="#Modal1">Ekle</button>
@Html.Action("PartialAddAbout","About")


